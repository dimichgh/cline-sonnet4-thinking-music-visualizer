{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "declaration": false,
    "declarationMap": false
  },
  "include": [
    "src/main.ts",
    "src/preload.ts",
    "src/shared/**/*"
  ],
  "exclude": [
    "src/renderer/**/*",
    "test/**/*"
  ]
}
